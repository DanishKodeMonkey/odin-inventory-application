<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <header><%- include('../partials/header.ejs') %></header>
        <main class="d-flex mx-5 align-items-center justify-content-center">
            <div class="content">
                <h1><%= title %></h1>
                <h2><%= item.name %></h2>
                <p>
                    <strong>Categories: </strong>
                    <% if(item.category && item.category.length > 0){ %> 
                        <% item.category.forEach(function(category){ %>
                            <li><a href="<%=category.url %>"><%=category.title %></a></li>
                        <% }) %> 
                    <% } %> 
                </p>
                <p><strong>Description:</strong><%=item.description %></p>
                <p><strong>Price: </strong><%= item.price %></p>
                <p><strong>In stock: </strong><%= item.numberInStock %></p>
            </div>
            <hr>
            <p><a href="<%= item.url+'/delete' %>">Delete item</a></p>
            <p><a href="<%= item.url+'/update' %>">Update item</a></p>
        </main>
        <footer><%- include('../partials/footer.ejs') %></footer>
    </body>
</html>
