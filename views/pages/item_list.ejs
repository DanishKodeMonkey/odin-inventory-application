<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <header><%- include('../partials/header.ejs') %></header>
        <main class="d-flex mx-5 align-items-center justify-content-center">
            <div class="content">
                <h1><%= title %></h1>
                <div>
                    <a href="/catalog/items/create">Create new item</a>
                    <div>
                        <% item_list.forEach(function(item){ %>
                        <ul>
                            <strong><a href="<%=item.url %>"><%= item.name %></a></strong>
                            <br />
                            Categories: <% if(item.category &&
                            item.category.length > 0){ %> <%
                            item.category.forEach(function(category){ %>
                            <li><a href="<%= category.url %>"><%=category.title %></a></li>
                            <% }) %> <% } %> price: <%=item.price %>
                            <br />
                            In stock: <%=item.numberInStock %>
                            <br />
                        </ul>
                        <% }) %>
                    </div>
                </div>
            </div>
        </main>
        <footer><%- include('../partials/footer.ejs') %></footer>
    </body>
</html>
